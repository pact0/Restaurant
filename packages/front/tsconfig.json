{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "ESNext",
    "sourceMap": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@models/*": ["src/models/*"],
      "@assets/*": ["src/assets/*"],
      "@common/*": ["src/common/*"],
      "@reducers/*": ["src/reducers/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist"],
  "transform": "typescript-transform-paths"
}
